@model SAMAirline.Model.Models.PaginationModel
@{
    ViewBag.Title = Resources.Resource.MyBookings;
}

<main class="mt-5 pt-5">
    <div class="container">
        <section class="mt-4">
            <div class="row">
                <div class="col-md-8 mb-4">
                    @Html.Partial("~/Views/Shared/BookingPartialView.cshtml")
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-4 mb-4">

                    <!--Card: Jumbotron-->
                    <div class="card blue-gradient mb-4 wow fadeIn">

                        <!-- Content -->
                        <div class="card-body text-white text-center">

                            <h4 class="mb-4">
                                <strong>Booking</strong>
                            </h4>
                            <p>
                                <strong>
                                    @Resources.Resource.MainTitle
                                </strong>
                            </p>
                            <p class="mb-4">
                                <strong>
                                    @Resources.Resource.SecondTitle
                                </strong>
                            </p>
                            <a target="_blank" href="Flight/Index" class="btn btn-outline-white btn-md">
                                @Resources.Resource.StartSearchigFlights <i class="fas fa-search ml-2"></i>
